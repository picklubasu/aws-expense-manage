{
	"AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
	"Description": "Billing Alerts for AWS Account",
	"Parameters": {
		"AccountId": {
			"Type": "String",
			"Description": "AWS account ID"
		},
        "Region": {
			"Type": "String",
			"Description": "AWS account region"
		},
		"SNSTopicName": {
			"Type": "String",
			"Description": "AWS account region"
		},
		"Email": {
			"Type": "String",
			"Description": "Email address to receive alarms per email"
		}
	},
	"Mappings": {
		"EstimatedCharges": {
			"AlarmRange": {
				"Basic": "5",
				"Threshold": "10",
				"Exhausted": "15"
			}
		}
	},
	"Resources": {
		"BillingAlertTopic": {
			"Type": "AWS::SNS::Topic",
			"Properties": {
				"TopicName": {
					"Fn::Join": [
						"-",
						[
							{
								"Ref": "AccountId"
							},
							{
								"Ref": "Region"
							},
							{
								"Ref": "SNSTopicName"
							}
						]
					]
				}
			}
		},
		"AlarmSubscriberEmail": {
			"Type": "AWS::SNS::Subscription",
			"Properties": {
				"Endpoint": {
					"Ref": "Email"
				},
				"Protocol": "email",
				"TopicArn": {
					"Ref": "BillingAlertTopic"
				}
			}
		},
		"BasicAlarm": {
			"Type": "AWS::CloudWatch::Alarm",
			"Properties": {
				"AlarmDescription": "Basic",
				"AlarmActions": {
					"Ref": "BillingAlertTopic"
				},
				"ComparisonOperator": "GreaterThanThreshold",
				"Dimensions": [
					{
						"Name": "Currency",
					  	"Value": "USD"
					}
				],
				"EvaluationPeriods": 1,
        		"MetricName": "EstimatedCharges",
        		"Namespace": "AWS/Billing",
        		"Period": 21600,
        		"TreatMissingData": "breaching",
        		"Statistic": "Maximum",
				"Threshold": "5"
			}
		}
	},
	"Outputs": {
		"MyTopicArn": {
			"Description": "Arn of Created SNS Topic",
            "Value": {
                "Ref": "BillingAlertTopic"
            }
		}
	}
}